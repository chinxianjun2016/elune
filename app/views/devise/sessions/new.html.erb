<div class="column" style="max-width: 450px;">
  <h2 class="ui teal image header">
    <!--<img src="assets/images/logo.png" class="image" style="margin-top: -100px;">-->
    <div class="content"><%= t('.sign_in') %></div>
  </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui large form"}) do |f| %>
    <div class="ui stacked segment">
      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.text_field :login  %>
        </div>
      </div>
      <div class="field">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
    </div>
    <div class="fields">
      <div class="field">
        <%= rucaptcha_input_tag(class: 'form-control', placeholder: '输入验证码') %>
      </div>
      <div class="field">
        <%= rucaptcha_image_tag(alt: '验证码，点击刷新') %>
      </div>
    </div>
    <div class="ui divider"></div>
    <%= submit_tag t('.sign_in'), class: "ui fluid large teal submit button" %>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>