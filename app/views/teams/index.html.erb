<table class="ui selected celled table">
  <thead>
    <tr>
      <th>姓名</th>
      <th>电话</th>
      <th>车牌号</th>
      <th>服务区域</th>
      <th>状态</th>
      <th>地址</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.phone %></td>
        <td><%= team.plate_no %></td>
        <td><%= team.area %></td>
        <td><%= team.status %></td>
        <td><%= team.address %></td>
        <td><%= link_to '编辑', edit_team_path(team) %></td>
        <td><%= link_to '删除', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot><%= link_to '添加安装队', new_team_path, class: "ui mini primary button" %></tfoot>
</table>


